                    <option>Vadodara</option>
                    <option>Varanasi</option>
                    <option>Visakhapatnam</option>
                </select>
            </div>
            <div class="col-md-5">
                <select type="text" name="state" class="form-select">
                    <option disabled selected>--Select State--</option>
                    <option>Andhra Pradesh</option>
