                </select>
            </div>
            <div class="col-md-2 text-end">
                <button type="submit" class="btn btn-info">Search</button>
            </div> 
        </form>
        @foreach(var hotel in Model)
        {
            <div class="col-6 pt-4">
                <div class="card">
                    <div class="card-header">
                        <h2 class="text-primary">@hotel.Name</h2>
                    </div>
                    <div class="card-body">
                        <img src="@hotel.ImageUrl" class="img-fluid rounded-start" style="width: 100%; height: 300px" />
                        <h5 class="text-secondary"><strong>@hotel.Location, @hotel.City, @hotel.State</strong></h5>
                        <p clas="text-muted">Number of Available Rooms : @hotel.availableRooms</p>
                    </div>
                    <div class="card-footer text-end">
                        <a asp-area="Customer" asp-controller="Hotel" asp-action="Details" asp-route-hotelId="@hotel.Id" class="btn btn-info">
                            <i class="bi bi-eye-fill"></i> &nbsp; Show Details
                        </a>
                    </div>
                </div>
            </div>
        }
    </div>
</div>