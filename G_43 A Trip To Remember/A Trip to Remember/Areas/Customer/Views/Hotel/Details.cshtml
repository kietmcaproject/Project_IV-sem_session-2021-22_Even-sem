@model Hotel

<div class="container pb-3">
    <div class="card">
        <div class="row g-0">
            <div class="card-header">
                <h2 class="text-primary">@Model.Name</h2>
                <p class="text-secondary">@Model.Location, @Model.City, @Model.State</p>
            </div>
            <div class="col-7">
                <div class="card-body">
                    @Html.Raw(@Model.Description)
                    <p class="text-muted">Number of Available Rooms: @Model.availableRooms</p>
                    <p class="text-muetd">Rent Per Day (one room) : <strong class="text-danger">@Model.RentPerDay.ToString("C", System.Globalization.CultureInfo.CreateSpecificCulture("hi-IN"))</strong></p>
                </div>
            </div>
            <div class="col-5">
                <img src="@Model.ImageUrl" class="img-fluid rounded-start" style="width: 100%; height: 300px" />
            </div>
        </div>
        <div class="card-footer row">
            <div class="col-6">
                <a asp-area="Customer" asp-controller="Hotel" asp-action="Index" class="btn btn-secondary">Back to List</a>
            </div>
            <div class="col-6 text-end">
                <a asp-area="Customer" asp-controller="Hotel" asp-action="Booking" asp-route-hotelId="@Model.Id" class="btn btn-info">Book Now</a>
            </div>
        </div>
    </div>
</div>