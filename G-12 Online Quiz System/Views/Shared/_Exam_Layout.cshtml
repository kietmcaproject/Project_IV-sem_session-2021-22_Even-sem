<!DOCTYPE html>

<html>
<head>
    <meta name="viewport" content="width=device-width" />
    <title>@ViewBag.Title</title>
    <link href="~/Content/img/favicon.ico" rel="shortcut icon" type="image/x-icon" />
</head>
<body style="background-color: #dda15e;">
    @{ 
        var imagepath = Session["studentimg"].ToString();
    }
    <div class="col-lg-2 col-md-2" style="height: 100vh; background-color: #e63946; border-right: 5px solid #e63946; box-shadow: 3px 9px 38px -2px rgba(70,0,0,1); ">
        <center>
            <div style=" margin-left:2px; margin-top:5px; padding:5px; border-radius:20px; height:200px">
                <div><img src="@Url.Content(imagepath)" alt="Alternate Text" width="150" height="150" style="border-radius:10px; margin-top:2px;    " /></div>
                <div style="margin-top: 5px; background-color: #f1faee; color: #e63946; font-size: 18px; width: 150px; border-radius: 10px; font-family: 'Lucida Sans', 'Lucida Sans Regular', 'Lucida Grande', 'Lucida Sans Unicode', Geneva, Verdana, sans-serif; ">
                    @Session["studentname"]
                </div>
            </div>
        </center>
    </div>

    <div class="col-lg-10 col-md-10">
        @RenderBody()
    </div>
</body>
</html>
